<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".LoginActivity">

    <ImageView
            android:src="@drawable/ic_baitaplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView" app:layout_constraintVertical_bias="0.119"/>

    <EditText
            android:background="@drawable/custom_edit_text"
            android:layout_width="0dp"
            android:hint="Login"
            android:paddingLeft="5dp"
            android:textColorHint="@android:color/black"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:layout_height="50dp"
            android:id="@+id/edt_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="1.0"/>

    <EditText
            android:background="@drawable/custom_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/edt_senha"
            app:layout_constraintStart_toStartOf="@+id/edt_login" app:layout_constraintEnd_toEndOf="@+id/edt_login"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/edt_login"/>


    <Button
            android:id="@+id/btn_entrar"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/custom_button"
            android:text="@string/btn_entrar"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edt_senha"
            app:layout_constraintEnd_toEndOf="@+id/edt_senha"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_senha"
            app:layout_constraintVertical_bias="0.07999998"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".FormEditPerfilActivity">


    <ImageView
            android:src="@drawable/ic_baitaplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView" app:layout_constraintVertical_bias="0.0" android:layout_marginTop="56dp"/>


    <EditText
            android:textColorHint="@android:color/black"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:hint="Login"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_cadastro_email_"
            android:layout_width="0dp"
            android:paddingLeft="12dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" android:layout_marginRight="56dp" android:layout_marginEnd="56dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>


    <EditText
            android:textColorHint="@android:color/black"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_form_cadastro_login_"
            android:layout_width="0dp"
            android:paddingLeft="12dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_cadastro_email_"/>

    <Button
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Editar"
            android:background="@drawable/custom_button"
            android:id="@+id/btn_form_cadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_form_cadastro_login_"
            app:layout_constraintStart_toStartOf="@+id/edt_form_cadastro_login_"
            app:layout_constraintEnd_toEndOf="@+id/edt_form_cadastro_login_"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <VideoView
            android:id="@+id/play_video_videoview"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="0dp"
            android:rating="3.5"
            android:numStars="5"
            android:theme="@style/RatingBar"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/play_video_videoview"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="16dp"
            android:text="Titulo do Canal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/play_video_videoview"
            app:layout_constraintStart_toStartOf="@+id/play_video_videoview"
            android:id="@+id/play_video_titulo"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>

    <TextView
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="16dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical|end"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/play_video_titulo"
            app:layout_constraintStart_toStartOf="@+id/play_video_titulo"
            android:id="@+id/play_video_descr"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/play_video_titulo"/>

    <ProgressBar
            android:id="@+id/progressbar"
            style="@style/RatingBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/play_video_videoview"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/play_video_videoview"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/play_video_videoview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/play_video_videoview"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">


    <EditText
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_form_edit_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="176dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"/>


    <EditText
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_form_edit_senha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_form_edit_login"/>

    <Button
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Editar"
            android:background="@drawable/custom_button"
            android:id="@+id/btn_form_edit_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_form_edit_senha"
            app:layout_constraintStart_toStartOf="@+id/edt_form_edit_senha"
            app:layout_constraintEnd_toEndOf="@+id/edt_form_edit_senha"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>